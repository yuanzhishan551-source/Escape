            color: rgba(150, 150, 150, 0.6);
            padding: 8px 12px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.75rem;
            transition: all 0.2s;
            z-index: 1000;
        }

        .sound-toggle:hover,
        .sound-toggle:focus {
            border-color: rgba(150, 150, 150, 0.5);
            color: rgba(180, 180, 180, 0.8);
            outline: none;
        }

        /* 结束画面 */
        .end-screen {
            position: absolute;
