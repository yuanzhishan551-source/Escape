            font-size: 1.1rem;
            text-align: center;
            pointer-events: none;
            opacity: 0;
            transition: opacity 0.4s;
            max-width: 300px;
            line-height: 1.8;
            text-shadow: 0 0 20px rgba(0, 0, 0, 0.9);
            z-index: 50;
        }

        .sensation.visible {
            opacity: 1;
        }

        /* 操作提示 */
        .action-hint {
            position: absolute;
            bottom: 40px;
            left: 50%;
            transform: translateX(-50%);
            color: rgba(180, 180, 180, 0.7);
            font-size: 0.9rem;
            opacity: 0;
            transition: opacity 0.5s;
            pointer-events: none;
            z-index: 50;
        }

        .action-hint.visible {
            opacity: 1;
        }

        /* 完整的门（开门时显示） */
        .door-full {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0;
            transition: opacity 0.8s;
            pointer-events: none;
            z-index: 10;
        }

        .door-full.visible {
            opacity: 1;
        }

        .door-panel {
            width: 180px;
            height: 280px;
            background: linear-gradient(to right, #1a1a1a 0%, #2a2a2a 50%, #1a1a1a 100%);
            border: 2px solid #333;
            border-radius: 6px;
            position: relative;
            transform-origin: left center;
            transition: transform 1s ease-out;
        }

        .door-panel.opening {
            transform: perspective(400px) rotateY(-105deg);
        }

        .door-knob-full {
            position: absolute;
