            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 1s;
            pointer-events: none;
            z-index: 200;
        }

        .end-screen.visible {
            opacity: 1;
            pointer-events: all;
        }

        .end-message {
            text-align: center;
