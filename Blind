        /* 墙壁纹理 */
        .wall-line {
            fill: none;
            stroke: rgba(160, 160, 160, 0.35);
            stroke-width: 1.2;
            filter: blur(0.5px);
        }

        /* 触摸圈 - 只保留中心点 */
        .touch-circle {
            position: absolute;
            width: 8px;
            height: 8px;
            pointer-events: none;
            transform: translate(-50%, -50%);
            z-index: 100;
        }

        .touch-circle::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 3px;
            height: 3px;
            background: rgba(200, 200, 200, 0.5);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            box-shadow: 0 0 8px rgba(200, 200, 200, 0.4);
